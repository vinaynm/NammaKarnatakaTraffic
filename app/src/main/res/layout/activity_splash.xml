<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:id="@+id/lin_lay"
    android:fitsSystemWindows="true"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"


            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/cloud"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:src="@drawable/splash_cloud2"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/sun"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:src="@drawable/splash_sun"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"


            >
            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imagev1"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:src="@drawable/splash_building1"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imagev2"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:src="@drawable/splash__building2"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imagev3"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:src="@drawable/splash_building3"
                />


            <ImageView
                android:id="@+id/imagev4"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:textAlignment="center"
                android:src="@drawable/splash_building4"
                />
        </LinearLayout>
        </LinearLayout>
</RelativeLayout>