<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="40dp"
    tools:context="com.yogeshojha.nammakarnatakatraffic.MainActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/top">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toplinear"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="Enter The Vehicle Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:id="@+id/textView2"
                            android:fontFamily="sans-serif"
                            android:textSize="25sp"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_marginTop="5dp"
                            android:text="Ex. KA-01-AB-1234"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView5"
                            android:layout_below="@+id/textView2"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"
                            android:textSize="18sp" />

                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/inputarea"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        >
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:id="@+id/stateka"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:textAllCaps="true"
                            android:hint="KA"
                            android:singleLine="true"
                            android:maxLength="2"
                            android:textAlignment="center"
                            android:nextFocusDown="@+id/asd"
                            />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/asd"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:maxLength="2"
                            android:nextFocusDown="@+id/asdt"
                            android:textAlignment="center"
                            android:hint="00" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:layout_marginLeft="3dp"
                            android:ems="10"
                            android:id="@+id/asdt"
                            android:maxLength="2"
                            android:layout_weight="1"
                            android:nextFocusDown="@+id/asdtn"
                            android:textAlignment="center"
                            android:hint="AB" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:inputType="number"
                            android:ems="10"
                            android:maxLength="4"
                            android:id="@+id/asdtn"
                            android:nextFocusDown="@+id/submit"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:layout_marginRight="5dp"
                            android:hint="1234" />

                    </LinearLayout>
                    <Button
                        android:text="Submit"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:id="@+id/submit_new"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_below="@+id/inputarea"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:background="#3F51B5"
                        android:textColor="#fff"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="21dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/inputVehicle" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/nofine" />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="#F44336"
                        android:id="@+id/totalviolations" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/TotalAmountLayout"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:textSize="20dp"
                                android:textColor="#4CAF50"
                                android:text="Total Fine Amount: "
                                />
                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:textSize="35dp"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textColor="#4CAF50"
                                />
                        </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:id="@+id/finedetailslist">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/new_fine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"/>
                </LinearLayout>
            </LinearLayout>
                <Button
                    android:visibility="gone"
                    android:text="Pay Fine"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:id="@+id/ButtonPayFine"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="#4CAF50"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true" />
                <Button
                    android:visibility="gone"
                    android:text="Rate Us☆☆☆"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:id="@+id/ButtonRateUs"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="60dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:background="#F44336"
                    android:textColor="#fff"
                    android:layout_centerHorizontal="true" />
            <LinearLayout
                android:layout_marginBottom="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>